
@model LoginViewModel


<h1>Login Page</h1>
<p>@TempData["WrongCredential"]</p>



<form class="form-horizontal" asp-action="Login" asp-controller="Account" method=" post">
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Email"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="email" placeholder="Enter email" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div> 
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Password"></label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="pwd" placeholder="Enter password" asp-for="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label><input type="checkbox"> Remember me</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary" >Submit</button>
        </div>
    </div>
</form>